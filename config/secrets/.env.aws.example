# AWS Environment Variables Example
# Copy this file to .env.aws and fill in your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE

# DynamoDB Tables
DYNAMODB_GAME_STATE_TABLE=tetris-game-states
DYNAMODB_LEADERBOARD_TABLE=tetris-leaderboard

# S3 Buckets
S3_REPLAY_BUCKET=tetris-replays
S3_ASSETS_BUCKET=tetris-assets

# Secrets Manager
SECRETS_MANAGER_ARN=arn:aws:secretsmanager:us-east-1:123456789012:secret:tetris-secrets-AbCdEf

# Bedrock AI
BEDROCK_MODEL_ID=anthropic.claude-v2
BEDROCK_REGION=us-east-1

# API Gateway
API_GATEWAY_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC
CLOUDFRONT_DOMAIN=d1234567890abc.cloudfront.net

# Lambda Configuration
LAMBDA_FUNCTION_NAME=tetris-game-api
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512

# Security
JWT_SECRET=YOUR_JWT_SECRET_HERE
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/lambda/tetris-game
X_RAY_TRACING=Active

# Environment
NODE_ENV=production
LOG_LEVEL=info